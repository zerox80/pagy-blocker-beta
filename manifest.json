{
    "manifest_version": 3,
    "name": "Pagy Blocker",
    "version": "7.1.0",
    "description": "Ein hochperformanter Ad-Blocker mit Chrome's declarativeNetRequest API. Erm√∂glicht das Deaktivieren pro Domain.",
    "author": "Pagy Team",
    "permissions": ["storage", "declarativeNetRequest", "tabs", "webRequest"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content/content-wrapper.js"],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Pagy Blocker - Domain-basierte Filtersteuerung"
    },
    "options_page": "options/options.html",
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "pagy_ruleset_static",
                "enabled": true,
                "path": "filter_lists/filter_precompiled.json"
            }
        ]
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["core/*.js", "content/content.js", "content/live-tracker-monitor.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'none'; base-uri 'self';"
    }
}
